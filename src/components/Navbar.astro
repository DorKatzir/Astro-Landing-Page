---
import { Icon } from 'astro-icon/components'

const navLinks = [
    {
        name: 'Home',
        url: '/',
        style: 'transparent'
    },
    {
        name: 'Pricing',
        url: '#',
        style: 'transparent'
    },
    {
        name: 'About',
        url: '#',
        style: 'transparent'
    },
    {
        name: 'Contact Me',
        url: '#',
        style: 'primary'
    }
]
---

<nav>
    <div class="container nav-container">
        <Icon name="logo" width={280} height={101} class='logo'/>
        <div class="nav-wrapper">
            <button class="btn btn--menu" id="menu-btn" aria-expanded="false" aria-label="Open mobile nav">
                <Icon name="menu" width={25} height={20}/>
            </button>
            <ul class="nav-links" role="navigation"></ul>
                {
                    navLinks.map(link => (
                        <li role="none">
                            <a href={link.url} class={`btn btn--${link.style} nav-link`}>{link.name}</a>
                        </li>
                    ))

                }
        </div>
    </div>
</nav>

<script>
    const navBtn = document.querySelector('#menu-btn')
    navBtn.addEventListener('click', ()=>{
        navBtn.setAttribute('aria-expanded', navBtn.getAttribute('aria-expanded') === 'false' ? 'true' : 'false')
    })
</script>