---
import '../styles/global.css'
import Navbar from '../components/Navbar.astro'
const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>

		<div class="wrapper">

			<Navbar />

			<main>
				<slot />
			</main>

			<footer class="blur">
				<small>Copyright &copy; <span id="copyrightYear"></span> D.K. Harvest</small>
			</footer>
			
		</div>



		<script>
			document.querySelector('#copyrightYear').textContent =  new Date().getFullYear().toString()
		</script>
	</body>
</html>

